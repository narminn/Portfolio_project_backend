@model PortfolioProject.Models.Project
@using PortfolioProject.Models

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Projects", FormMethod.Post, new { @enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Project</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

     
        <div class="form-group">
            @Html.LabelFor(model => model.project_main_img, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.project_main_img, new { htmlAttributes = new { @class = "form-control",@type="file" } })
                @Html.ValidationMessageFor(model => model.project_main_img, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.project_draft_img, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.project_draft_img, new { htmlAttributes = new { @class = "form-control",@type="file" } })
                @Html.ValidationMessageFor(model => model.project_draft_img, "", new { @class = "text-danger" })
            </div>
        </div>

        @foreach (Keystring item in ViewBag.KeyWords)
        {
            <div class="form-group">
                <div class="col-md-2">
                    <label for="sel1">Select language:</label>
                </div>
                <div class="col-md-10">
                    <p>@item.Language.language1</p>
                    <select style="display:none" class="form-control" id="sel1" name="langlist">
                        <option value="@item.Language.id">@item.Language.language1</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2"><label>Title</label></div>
                <div class="col-md-10">

                    <input type="text" value="@item.title" name="title" style="width:100%" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2"><label>Content</label></div>
                <div class="col-md-10">

                    <input type="text" value="@item.content" name="content" style="width:100%" class="form-control" />
                </div>
            </div>

        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
