@model PortfolioProject.ViewModel.SingleProjectModel
@{
    ViewBag.Title = "SingleProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


        <section id="singleProject">

            <div class="container">
                <div class="text-center _section_title">
                    <a href="#">
                        <h2>@Model._single_project.list.title</h2>
                    </a>
                    <hr>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="main">
                            <img src="@Model._single_project.project_main_img" alt="">
                            <img src="@Model._single_project.project_draft_img" alt="">
                            <video width="400" controls>
                                <source src="@Model._single_project.project_video" type="video/mp4">
                            </video>
                            <div class="singleText">
                                <img src="~/Assets/img/line.jpg" alt="">
                                <div class="text">
                                    <h1>@Model._single_project.list.title</h1>
                                    <p>@Model._single_project.list.content</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    @foreach (var item in Model._project_img)
                    {
                        <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                        <div class="single">
                            <a href="@item.project_img" class="thumbnail">
                                <img src="@item.project_img">
                            </a>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </section>



