@model PortfolioProject.ViewModel.ContactModel
@{
    ViewBag.Title = "Contact";
}

        <section id="contact">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 col-md-7 col-sm-12 col-12">
                        <img src="~/Assets/img/contact.jpg" alt="" class="mainImg">
                    </div>
                    <div class="col-lg-5 col-md-5 col-sm-12 col-12">
                        <div class="contactInfo">
                            <div class="infoTitle">
                                <div class="text-center _section_title">
                                    <a href="#">
                                        <h2>@PortfolioProject.Resources.HomeTexts.Contact</h2>
                                    </a>
                                    <hr>
                                </div>
                                <p>@PortfolioProject.Resources.HomeTexts.Contact_text.</p>
                            </div>
                            @foreach (var item in Model._contact)
    {
                        <div class="infoContent">
                            <div class="info">
                                <div class="image">
                                    <img src="~/Assets/img/envelopes.png" alt="">
                                </div>
                                <div class="text">
                                    <h5>
                                        @PortfolioProject.Resources.HomeTexts.Email
                                    </h5>
                                    <p>@item.contact_email</p>
                                </div>
                            </div>
                            <div class="info">
                                <div class="image">
                                    <img src="~/Assets/img/phones.png" alt="">
                                </div>
                                <div class="text">
                                    <h5>
                                        @PortfolioProject.Resources.HomeTexts.Phone
                                    </h5>
                                    <p>@item.contact_main_phone</p>
                                    <p>@item.contact_secod_phone</p>
                                </div>
                            </div>
                            <div class="info">
                                <div class="image">
                                    <img src="~/Assets/img/map-markers.png" alt="">
                                </div>
                                <div class="text">
                                    <h5>
                                        @PortfolioProject.Resources.HomeTexts.Address
                                    </h5>
                                    <p>@item.list.content</p>
                                </div>
                            </div>
                        </div>
}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="contactForm">
                            <h4>@PortfolioProject.Resources.HomeTexts.Send_your_msg</h4>
                            <form class="w3-container" action="~/Home/Contact" method="post">
                                <div class="form-group">
                                    <input type="text" class=" w3-input w3-border w3-animate-input" id="name" placeholder="Name" name="name">
                                </div>
                                <div class="form-group">
                                    <input type="email" class="w3-input w3-border w3-animate-input" id="email" placeholder="Email" name="email">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="w3-input w3-border w3-animate-input" id="name" placeholder="Subject" name="subject">
                                </div>
                                <div class="form-group">
                                    <textarea rows="4" cols="56" placeholder="Text" name="message">

                                    </textarea>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-default contactBtn">@PortfolioProject.Resources.HomeTexts.Send_btn</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="contactForm">
                            <h4>@PortfolioProject.Resources.HomeTexts.Comment_suggestion</h4>
                            <form class="w3-container" action="~/Home/Message" method="post">
                                <div class="form-group">
                                    <input type="text" class="w3-input w3-border w3-animate-input" id="name" placeholder="Name" name="user_name">
                                </div>
                                <div class="form-group">
                                    <textarea rows="8" cols="56" placeholder="Text" name="user_message">

                                     </textarea>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-default contactBtn" style="margin-top:46px">@PortfolioProject.Resources.HomeTexts.Send_btn</button>
                                </div>
                            </form>
                        </div>
                    </div>








        </section>
        
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Recipient:</label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="form-group">
                            <label for="message-text" class="col-form-label">Message:</label>
                            <textarea class="form-control" id="message-text"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Send message</button>
                </div>
            </div>
        </div>
    </div>

 
