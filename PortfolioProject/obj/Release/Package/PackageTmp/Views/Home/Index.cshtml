@model PortfolioProject.ViewModel.IndexModel

@{
    ViewBag.Title = "Home Page";
}


        <!-- Header Section -->
        <header id="Slider">
            <!-- <div class="container-fluid"> -->
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Model._first_img.slider_img" alt="First slide">
                        <div class="carousel-caption">
                            <h1>@Model._first_img.list.content</h1>
                        </div>
                    </div>
                    @foreach (var item in Model._slider)
    {

                <div class="carousel-item">
                    <img class="d-block w-100" src="@item.slider_img" alt="First slide">
                    <div class="carousel-caption">
                        <h1>@item.list.content</h1>
                    </div>
                </div>
}

                </div>
                <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <!-- </div> -->
        </header>
        <!-- End of Header section -->
        <!-- Projets Section  -->
        <section id="projects">
            <div class="_anime_tr _anime_main">
                <img src="~/Assets/img/anime1.jpg" alt="">
            </div>
            <div class="_anime_tl _anime_main">
                <img src="~/Assets/img/anime2.jpg" alt="">
            </div>
            <div class="_anime_ml _anime_main">
                <img src="~/Assets/img/anime3.jpg" alt="">
            </div>
            <div class="_anime_mr _anime_main">
                <img src="~/Assets/img/anime4.jpg" alt="">
            </div>
            <div class="_anime_fl _anime_main">
                <img src="~/Assets/img/anime5.jpg" alt="">
            </div>
            <div class="_anime_fr _anime_main">
                <img src="~/Assets/img/anime6.jpg" alt="">
            </div>
            <div class="container">
                <div class="text-center _section_title">
                    <a href="~/Home/Projects">
                        <h2>@PortfolioProject.Resources.HomeTexts.Projects</h2>
                    </a>
                    <hr>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="homepage">
                            @foreach (var item in Model._project)
                            {
                                <div class="item">
                                <a href="~/Home/SingleProject/@item.id">
                                    <img src="@item.project_main_img" alt="">
                                </a>
                            </div>
                            }
                           
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End of Projets Section -->
        <!-- WorkShop -->
        <section id="WorkShop">
            <div class="container">
                <div class="_section_title text-center">
                    <a href="~/Home/Workshops">
                        <h2>@PortfolioProject.Resources.HomeTexts.Workshops</h2>
                    </a>
                    <hr>
                </div>
                <div class="row _workshop_content">
                    @foreach (var item in Model._workshop)
    {
                <div class="col lg-4 col-md-4 col-sm-12 col-12">
                    <a href="~/Home/SingleWorkshop/@item.id">
                        <div class="_img_workshop">
                            <img src="@item.workshop_main_img" alt="">
                            <div class="_layout_workwhop">
                                <h3>@item.list.title</h3>
                            </div>
                        </div>
                    </a>
                </div>
}
                 
                </div>
    </div>
    </section>

    <!-- End of Work Shop -->
    <!-- About -->
    <section id="about">
        <div class="container">
            <div class="text-center _section_title">
                <a href="~/Home/About">
                    <h2>@PortfolioProject.Resources.HomeTexts.About</h2>
                </a>
                <hr>
            </div>
            @foreach (var item in Model._about)
    {
        <div class="row">
            <div class="col-lg-6">
                <div class="aboutImg">
                    <img src="@item.about_main_img" alt="">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="aboutText">
                    <p>@item.list.content</p>
                </div>
            </div>
        </div>
}
        </div>
    </section>
    <!-- End of About -->
    <!-- Presse -->
    <section id="Presse">
        <div class="container">
            <div class="text-center _section_title">
                <a href="~/Home/Press">
                    <h2>@PortfolioProject.Resources.HomeTexts.Press</h2>
                </a>
                <hr>
            </div>
            <div class="row _presse_content">
                @foreach (var item in Model._press)
                {
                    <div class="col-md-4">
                    <a href="~/Home/SinglePress/@item.id">
                        <div class="_press_img">
                            <img src="@item.press_img" alt="">
                            <!-- <div class="_hover_img">
                                <h2>salam</h2>
                            </div> -->
                        </div>
                    </a>
                </div>
                }
            </div>
        </div>
    </section>
    <!-- End of Presse -->
   