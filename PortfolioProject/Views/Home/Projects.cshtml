@model PortfolioProject.ViewModel.ProjectModel
@{
    ViewBag.Title = "Projects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


        <section id="projects">
            <div class="container">
                <div class="text-center _section_title">
                    <a href="#">
                        <h2>@PortfolioProject.Resources.HomeTexts.Projects</h2>
                    </a>
                    <hr>
                </div>
                <div class="row">

                    <div class="col-md-12">

                        <div class="homepage">
                            @foreach (var item in Model._project)
    {
                        <div class="item">
                            <a href="~/Home/SingleProject/@item.id">
                                <img src="@item.project_main_img" alt="">
                            </a>
                        </div>
}
                        </div>
                    </div>
                </div>
            </div>
        </section>



