@model PortfolioProject.ViewModel.SingleWorkshopModel
@{
    ViewBag.Title = "SingleWorkshop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


        <section id="singleProject">

            <div class="container">
                <div class="text-center _section_title">
                    <a href="#">
                        <h2>@Model._single_workshop.list.title</h2>
                    </a>
                    <hr>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="main">
                            <img src="@Model._single_workshop.workshop_main_img" alt="">
                            <video width="400" controls>
                                <source src="@Model._single_workshop.workshop_video" type="video/mp4">
                            </video>
                            <p>@Model._single_workshop.list.content</p>

                        </div>
                    </div>
                    @foreach (var item in Model._workshop_img)
                    {
                        <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                        <div class="single">
                            <a href="@item.workshop_img" class="thumbnail">
                                <img src="@item.workshop_img">
                            </a>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </section>
 
